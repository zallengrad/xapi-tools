// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ===========================================
// == INI ADALAH MODEL INDUK (FILING CABINET) ==
// ===========================================
model AnalysisResult {
  id          String   @id @default(uuid())
  sourceFile  String
  recordCount Int // Total baris event yang diproses
  generatedAt DateTime
  createdAt   DateTime @default(now())

  // Relasi ke Pemilik (User)
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // --- PERUBAHAN UTAMA ---
  // Hapus 'payload Json'
  // Tambahkan relasi one-to-one ke "laci" data kita
  lsaResult      LsaResult?
  overviewResult OverviewResult?
  // -----------------------

  @@index([userId]) // Tambahkan index untuk query yang lebih cepat
}

// ===========================================
// == LACI 1: DATA LSA (Tabel Baru) ==
// ===========================================
model LsaResult {
  id    String @id @default(uuid())
  payload Json // Di sini kita simpan data LSA (observed, zScores, dll)

  // Relasi one-to-one ke Induk
  analysisResultId String         @unique // @unique sangat penting untuk one-to-one
  analysisResult   AnalysisResult @relation(fields: [analysisResultId], references: [id], onDelete: Cascade)
}

// ===========================================
// == LACI 2: DATA OVERVIEW (Tabel Baru) ==
// ===========================================
model OverviewResult {
  id    String @id @default(uuid())
  
  // KPI (Sekarang menjadi kolom, bisa di-query!)
  totalEvents    Int
  activeUsers    Int
  uniqueContents Int
  topVerb        String

  // Data Grafik (Kita simpan sebagai JSON karena ini array)
  dailyActivity Json // Akan berisi: [{ date: "...", events: 123 }]
  topVerbs      Json // Akan berisi: [{ verb: "...", count: 456 }]
  topObjects    Json // Akan berisi: [{ name: "...", count: 789 }]

  // Relasi one-to-one ke Induk
  analysisResultId String         @unique // @unique sangat penting untuk one-to-one
  analysisResult   AnalysisResult @relation(fields: [analysisResultId], references: [id], onDelete: Cascade)
}


// ===================================================
// == MODEL USER DAN AUTH (Tetap Sama) ==
// ===================================================

model User {
  id              String    @id @default(cuid())
  name            String?
  email           String?   @unique
  emailVerified   DateTime?
  image           String?
  hashedPassword  String?
  
  // Relasi ke semua hasil analisis miliknya
  analysisResults AnalysisResult[]

  accounts Account[]
  sessions Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}